import simplegui
import random 
x = 300
y = 300
goingRight = 1
goingDown = 1 
randomnessX = random.randint(1, 5)
randomnessY = random.randint(1, 5)
randomColor = 2
color = "White"
def draw_handler(canvas):
    global x
    global y
    global goingRight
    global goingDown
    global randomnessX
    global randomnessY
    global randomColor
    global color
    if (x <= 40):
        goingRight = 1
        randomnessX = random.randint(1, 3)
        randomColor = random.randint(1, 8)
    elif(x >= 560):
        goingRight = 0
        randomnessX = random.randint(1, 3)
        randomColor = random.randint(1, 8)
    if (goingRight == 0):
        x = x - randomnessX
    if (goingRight ==1):
        x = x + randomnessX
        
        
    if (y <= 30):
        goingDown = 1
        randomnessY = random.randint(1, 3)
        randomColor = random.randint(1, 8)
    elif(y >= 570):
        goingDown = 0
        randomnessY = random.randint(1, 3)
        randomColor = random.randint(1, 8)
    if (goingDown == 0):
        y = y - randomnessY
    if( goingDown ==1):
        y = y + randomnessY
        
    if(randomColor == 1):
        color = "Red"
    elif(randomColor == 2):
        color = "Orange"
    elif(randomColor == 3):
        color = "Yellow"
    elif(randomColor == 4):
        color = "limegreen"
    elif(randomColor == 5):
        color = "Cyan"
    elif(randomColor == 6):
        color = "Violet" 
    elif(randomColor == 7):
        color = "blueviolet"

        
        
    canvas.draw_text((x, y), 30, 10, color)



frame = simplegui.create_frame('Testing', 600, 600)
frame.set_canvas_background("Black")
frame.set_draw_handler(draw_handler)
frame.start()
